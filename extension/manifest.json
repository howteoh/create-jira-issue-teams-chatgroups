{
  "manifest_version": 3,
  "name": "Teams Chat Creator",
  "version": "1.0",
  "description": "Create Teams chats directly from Chrome",
  "permissions": [
    "nativeMessaging",
    "storage"
  ],
  "host_permissions": [
    "https://jira.realtek.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 